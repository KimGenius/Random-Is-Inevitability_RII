<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_1px"
        android:padding="3dp"
        app:scale_base_height="12"
        app:scale_base_width="100"
        app:scale_height="10"
        app:scale_width="100">

        <TextView
            android:id="@+id/list_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#121212"
            app:scale_height="5"
            app:scale_left="16"
            app:scale_textsize="4"
            app:scale_top="1"
            app:scale_width="60" />

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#121212"
            app:scale_height="5"
            app:scale_left="16"
            app:scale_textsize="4"
            app:scale_top="5"
            app:scale_width="60" />

        <TextView
            android:id="@+id/result_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="#ff444f"
            app:scale_height="8"
            app:scale_left="76"
            app:scale_textsize="4"
            app:scale_top="2"
            app:scale_width="8" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</FrameLayout>